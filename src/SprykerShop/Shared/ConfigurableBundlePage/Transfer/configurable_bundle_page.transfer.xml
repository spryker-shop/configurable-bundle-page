<?xml version="1.0"?>
<transfers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="spryker:transfer-01"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="ConfigurableBundleTemplateStorageRequest">
        <property name="idConfigurableBundleTemplate" type="int"/>
        <property name="idConfigurableBundleTemplateSlot" type="int"/>
    </transfer>

    <transfer name="ConfiguredBundleItemRequest">
        <property name="slotUuid" type="string"/>
        <property name="sku" type="string"/>
        <property name="quantity" type="int"/>
    </transfer>

    <transfer name="ConfiguredBundleRequest">
        <property name="templateUuid" type="string"/>
        <property name="templateName" type="string"/>
        <property name="quantity" type="int"/>
    </transfer>

    <transfer name="CreateConfiguredBundleRequest">
        <property name="configuredBundleRequest" type="ConfiguredBundleRequest"/>
        <property name="items" type="ConfiguredBundleItemRequest[]" singular="item"/>
    </transfer>

</transfers>
