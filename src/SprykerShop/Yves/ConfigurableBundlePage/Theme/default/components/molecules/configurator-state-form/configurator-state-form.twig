{% extends model('component') %}

{% define config = {
    name: 'configurator-state-form',
} %}

{% define data = {
    form: required,
    action: required,
    submitButtonText: required,
    isSubmitButtonActive: true
} %}

{% block body %}
    {{ form_start(data.form,  {'action': data.action}) }}

    {% for slotForm in data.form.slots %}
        {{ form_widget(slotForm) }}
    {% endfor %}

    <button type="submit" name="submit" class="btn-link" {{ data.isSubmitButtonActive ? '' : 'disabled' }}>
        {{ data.submitButtonText }}
    </button>

    {{ form_end(data.form) }}
{% endblock %}
