{% extends model('component') %}

{% define config = {
    name: 'templates-list',
} %}

{% define data = {
    templates: required,
} %}

{% block body %}
    {% block title %}
        <h5 class="{% block titleClasses %}spacing-bottom--big{% endblock %}">{{ 'configurable_bundle_page.configurator.choose_template' | trans }}</h5>
    {% endblock %}

    {% block content %}
        {% if data.templates | length %}
            {% block list %}
                <ul class="grid {{ config.name }}__list">
                    {% for template in data.templates %}
                        {% block listItem %}
                            <li class="{% block listItemClasses %}col col--sm-12 col--md-6 col--xl-3{% endblock %}">
                                {% block listItemInner %}
                                    {% set slotsPageUrl = path('configurable-bundle/configurator/slots', {'idConfigurableBundleTemplate': template.idConfigurableBundleTemplate }) %}
                                    <div class="box box--stretch">
                                        {% block templateTitle %}
                                            <a href="{{ slotsPageUrl }}" class="{{ config.name }}__item-title grid grid--center grid--middle spacing-bottom">
                                                {{ template.name | trans }}
                                            </a>
                                        {% endblock %}

                                        {% block button %}
                                            <a href="{{ slotsPageUrl }}" class="button button--expand button--success">
                                                {{ 'configurable_bundle_page.select' | trans }}
                                            </a>
                                        {% endblock %}
                                    </div>
                                {% endblock %}
                            </li>
                        {% endblock %}
                    {% endfor %}
                </ul>
            {% endblock %}
        {% else %}
            {% block message %}
                <p>
                    {{ 'configurable_bundle_page.configurator.templates_not_found' | trans }}
                </p>
            {% endblock %}
        {% endif %}
    {% endblock %}
{% endblock %}
